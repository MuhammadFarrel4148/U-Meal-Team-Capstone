<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UMeal" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/matcha50</item>
        <item name="colorSecondary">@color/matcha70</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorContainer">@color/black60</item>
        <item name="textAppearanceBody1">@color/white</item>
        <item name="textAppearanceBody2">@color/white50</item>

        <!-- set default status bar transparent in dark mode-->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>