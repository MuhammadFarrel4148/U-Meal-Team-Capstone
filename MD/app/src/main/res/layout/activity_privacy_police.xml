                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="@string/privacy_police_3_desc_1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="@string/privacy_police_3_desc_2"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="@string/privacy_police_3_desc_3"
                android:textSize="14sp" />

            <!-- Perlindungan Data Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/privacy_police_4"
                android:textSize="16sp"
                android:textStyle="bold" />

