            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:layout_marginTop="16dp"
                android:text="@string/privacy_police_last"
                android:textSize="14sp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>